#!/usr/bin/env node

const mysql = require('mysql');


const dbConnection = mysql.createConnection({
    host: 'localhost',
    user: 'local_user',
    password: 'P@ssword',
    database: 'aloha'
});

dbConnection.connect(function(err) {
    if (err) throw err
    console.log('Successfully connected to database');
});

module.exports = dbConnection;



